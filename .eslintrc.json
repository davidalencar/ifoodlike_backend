{
	"env": {
		"browser": true,
		"commonjs": true,
		"es6": true,
		"node": true,
		"mocha": true
	},
	"extends": [
		"eslint:recommended",
		"plugin:mocha/recommended"
	  ],
	"globals": {
		"Atomics": "readonly",
		"SharedArrayBuffer": "readonly",
		"exampleGlobalVariable": true
	},
	"parserOptions": {
		"ecmaVersion": 2018
	},
	"plugins": [
		"mocha"
	  ],
	"rules": {
		"mocha/no-exclusive-tests": "error"
	}
}
